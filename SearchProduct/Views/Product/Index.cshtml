@model IEnumerable<SearchProduct.Models.Product>;
@{
    ViewData["Title"] = "Index";
    int sl = 0;
}


<br />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2>Product List</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Add Product</a>
    </div>
</div>
<br />
<br />
<br />

<form method="post">
    <div class="row text-end">
        <div class="d-flex ">
            <select name="category" class="form-control" asp-items="@(ViewBag.CategoryList)"></select>
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
        
    </div>
</form>

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr class="table-info">
                <th>SL</th>
                <th>@Html.DisplayNameFor(x=>x.Name)</th>
                <th>@Html.DisplayNameFor(x=>x.CategoryId)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(sl+1)</td>
                    <td>@(item.Name)</td>
                    <td>@(item.Category.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
</div>


